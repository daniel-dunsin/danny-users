<%- include("./components/header") %>

<div class="main-container container">
  <% if (message) { %> <%- include("./components/status-tab") %> <% } %> <% if
  (users && users.length >0) { %>

  <div class="table-container">
    <table class="users-table">
      <thead>
        <tr>
          <th>S/N</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
        </tr>
      </thead>
      <tbody>
        <% users?.forEach((user, index)=>{ %>
        <tr>
          <td><%= index + 1 %> .</td>
          <td class="image-cell">
            <img
              loading="lazy"
              src="<%= user.imageUrl %>"
              alt=""
              referrerpolicy="no-referrer"
            />
            <p><%= user.name %></p>
          </td>

          <td><%= user.email %></td>

          <td><%= user.phoneNumber %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } else { %>
  <div class="no-user">
    <h2 class="">No user has been added</h2>
    <a href="/add-user"><button>Add a user</button></a>
  </div>
  <%} %>
</div>

<%- include("./components/footer") %>
